<UserControl x:Class="TooHuman1SE.LogUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TooHuman1SE"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" ToolTip="Message Log">
    <Grid ToolTip="">
        <RichTextBox x:Name="RichLog" TextChanged="RichTextBox_TextChanged" FontFamily="Lucida Console" VerticalScrollBarVisibility="Visible" Padding="0 5px">
            <RichTextBox.Resources>
                <Style TargetType="{x:Type Paragraph}">
                    <Setter Property="Margin" Value="0"/>
                </Style>
            </RichTextBox.Resources>
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</UserControl>

<Window x:Class="TooHuman1SE.Windows.DataPairEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TooHuman1SE.Windows"
        mc:Ignorable="d"
        Title="Stat Editor" Height="112" Width="225" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid>
        <ComboBox x:Name="comboStat" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="185" Height="21" SelectionChanged="comboStat_SelectionChanged"/>
        <TextBox x:Name="txtValue" HorizontalAlignment="Left" Height="21" Margin="10,41,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="75" MaxLength="10" PreviewTextInput="txt_NumberOnly" KeyDown="txtValue_KeyDown"/>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Left" Margin="90,41,0,0" VerticalAlignment="Top" Width="50" Height="21" Cursor="Hand" Click="btnOK_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="145,41,0,0" VerticalAlignment="Top" Width="50" Height="21" Cursor="Hand" Click="btnCancel_Click"/>

    </Grid>
</Window>
